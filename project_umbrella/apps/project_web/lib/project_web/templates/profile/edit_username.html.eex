<h1><%= gettext "username change"  %></h1>

<%= form_for @edit_username_changeset, Routes.profile_path(@conn, :update_username), fn f -> %>
<%= if @edit_username_changeset.action do %>
<div class="alert alert-danger">
  <p><%= gettext "Oops, something went wrong! Please check the errors below."%></p>
</div>
<% end %>



<%= label f, :username %>
<%= text_input f, :username %>
<%= error_tag f, :username %>



<div>
  <%= submit "Save" %>
</div>
<% end %>